<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- Logo -->
    <ImageView
	    android:id="@+id/logo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/logo" />

    
    <EditText 
        android:id="@+id/up_email"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="5dp"
	    android:hint="email@csupomona.edu"
	    android:inputType="textEmailAddress"
	    android:layout_below="@id/logo"
        />
    
    <EditText
        android:id="@+id/up_pwd"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="5dp"
	    android:hint="Password"
	    android:inputType="textPassword"
	    android:layout_below="@id/up_email"
         />
    
    <EditText 
        android:id="@+id/up_pwd2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="5dp"
	    android:hint="Confirm password"
	    android:inputType="textPassword"
	    android:layout_below="@id/up_pwd"
        />
    
    <Button 
        android:id="@+id/register"
	    android:layout_width="120dp"
	    android:layout_height="35dp"
	    android:layout_below="@id/up_pwd2"
	    android:layout_marginTop="22dp"
	    android:text="Register"
	    android:layout_marginLeft="50dp"
	    android:textSize="14sp"
	    android:padding="5dp"
        />
    
    <Button 
        android:id="@+id/regCancel"
	    android:layout_width="120dp"
	    android:layout_height="35dp"
	    android:layout_below="@id/up_pwd2"
	    android:layout_toRightOf="@id/register"
	    android:layout_marginTop="22dp"
	    android:layout_marginRight="50dp"
	    android:text="Cancel"
	    android:textSize="14sp"
	    android:padding="5dp"
        />
    

</RelativeLayout>
